icon-size = 32px
icon-gap = 25px

article
  font-size 16px
  padding 30px 0

  & + article
    gradient-border-top()

  &.page
    padding-left 20px
    .icon
      display none

  &.post
    .icon
      &:before
        content '\f016'

  &.photo
    .icon
      &:before
        content '\f030'

  &.link
    .icon
      &:before
        content '\f0c1'

    .title
      a
        &:after
          content '\f08e'
          color color-meta
          font 12px font-icon
          padding-left 10px
          vertical-align super

  ul, ol, dl
    margin 0
    padding 0

  img
    max-width 100%

.entry-header
  .title
    font-size 1.8em
    font-weight normal
    a
      color color-text
      &:hover
        color color-link
        text-decoration none

.entry-content
  text-align justify
  line-height 2

  p, blockquote, ul, ol, dl, table, iframe, h3, h4, h5, h6, .video-container, pre
    margin 10px 0 0
    padding 0

  a
    color color-link

  .permalink
    color color-text
    text-decoration underline

  blockquote
    border-top 1px solid color-border
    border-bottom 1px solid color-border
    font-style italic
    font-family font-serif
    font-size 1.2em
    padding 0 30px 15px
    text-align center
    footer
      border-top none
      font-size 0.8em
      line-height 1
      margin 20px 0 0
      padding-top 0
      cite
        &:before
          content 'â€”'
          color #ccc
          padding 0 0.5em

  pre, code
    background color-code-background
    border 1px solid color-border-darken
    font-family font-mono
    
    border-radius 5px

  code
    margin 0 3px
    padding 1px 3px
    font-size 0.9em

  pre
    line-height font-code-line-height
    padding 5px 15px
    overflow auto

    code
      background none
      border none
      border-radius 0
      margin 0
      padding 0

  ul, ol, dl
    margin-left 20px
    ul, ol, dl
      margin-top 0

  h1, h2
    font-weight normal
    border-bottom 1px solid color-border
    padding-bottom 10px
    margin-top 20px

  h3, h4, h5, h6
    font-weight normal

  img, video
    max-width 100%
    height auto
    border none

  iframe
    border none

  .caption
    display block
    margin-top 5px
    color color-meta
    position relative
    font-size 0.9em
    padding-left 25px
    &:before
      content '\f040'
      position absolute
      font 1.3em font-icon
      position absolute
      left 0
      top 3px

  .video-container
    position relative
    padding-bottom 56.25%
    padding-top 30px
    height 0
    overflow hidden
    iframe, object, embed
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      margin-top 0

  .pullquote
    float right
    border none
    padding 0
    margin 1em 0 0.5em 1.5em
    text-align left
    width 45%
    font-size 1.5em

.entry-footer
  color color-meta
  margin-top 10px
  font-size 0.9em
  line-height 2

  a
    color color-meta
    &:hover
      color color-link
      text-decoration none
    &:before
      font 1.1em font-icon
      padding-right 10px
      vertical-align middle

    &.more-link
      &:before
        content '\f054'

    &.comment-link
      &:before
        content '\f075'

  time, .categories, .tags
    display block
    position relative
    padding-left 30px

    &:before
      color color-meta-lighten
      font 1.3em/1.6em FontAwesome
      left 0
      position absolute

  time
    &:before
      content "\f073"

  .categories
    &:before
      content '\f07b'
      top 2px
      left 1px

  .tags
    &:before
      content '\f02c'
      top 3px
      left 2px

  .addthis
    margin-top 15px
    iframe
      margin-top 0
