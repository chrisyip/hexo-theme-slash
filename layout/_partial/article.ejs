<article class="<% if ( item.class ) { %><%= item.class %><% } %>">
<header class='entry-header'><%- partial( 'post/title' ) %></header>
<%
  var is_list_page = page.archive || page.tag || page.category
  if ( !is_list_page ) {
%>
<div class="entry-content">
  <% if ( item.excerpt && index ) { %>
    <%- item.excerpt %>
    <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= theme.excerpt_link %></a>
  <% } else { %>
    <%- item.content %>
  <% } %>
  <%
    if ( index && item.link && config.permalink_label ) {
  %>
  <p><a class="permalink" href="<%= config.root + item.path %>"><%= config.permalink_label %></a>
  <% } %>
</div>
<% } %>
<footer class='entry-footer'>
  <%
    if ( item.layout !== 'page' ) {
      var _time = item.date.format( is_list_page ? theme.date_format.shorthand || config.date_format : config.date_format )
  %>
    <time datetime="<%= item.date.toDate().toISOString() %>"><%= _time %></time>
    <%- partial( 'post/category' ) %>
    <%- partial( 'post/tag' ) %>
    <% if ( !is_list_page ) { %><%- partial( 'post/share' ) %><% } %>
  <% } %>
</footer>
</article>
<%- partial( 'comment' ) %>
