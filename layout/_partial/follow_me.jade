.follow_me
  - var facebook = theme.follow_me.facebook || config.follow_me.facebook
  if facebook
    a.facebook( href='https://www.facebook.com/#{ facebook }' title='Facebook' ) Facebook

  - var github = theme.follow_me.github || config.follow_me.github
  if github
    a.github( href='https://www.facebook.com/#{ github }' title='GitHub' ) GitHub

  - var googleplus = theme.follow_me.googleplus || config.follow_me.googleplus
  if googleplus
    a.google( href='https://www.facebook.com/#{ googleplus }' title='Google+' ) Google+

  - var linkedin = theme.follow_me.linkedin || config.follow_me.linkedin
  if linkedin
    a.linkedin( href='https://www.linkedin.com/in/#{ linkedin }' title='LinkedIn' ) LinkedIn

  - var pinterest = theme.follow_me.pinterest || config.follow_me.pinterest
  if pinterest
    a.pinterest( href='https://pinterest.com/#{ pinterest }' title='Pinterest' ) Pinterest

  - var twitter = theme.follow_me.twitter || config.follow_me.twitter
  if twitter
    a.twitter( href='https://twitter.com/#{ twitter }' title='Twitter' ) Twitter

  if theme.rss || config.rss
    a.rss( href='#{ theme.rss || config.rss }' title='RSS' ) RSS
